<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="12dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/order_list_image"
        android:layout_width="64dp"
        android:layout_height="77.65dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/empty_l"/>

    <com.foodfly.gcm.app.view.FixedRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77.65dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/order_list_image"
        android:layout_toRightOf="@+id/order_list_image">

        <TextView
            android:id="@+id/order_list_date"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="2016-07-29"
            android:textScaleX="0.96"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/order_list_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/order_list_date"
            android:layout_toLeftOf="@+id/order_list_arrow"
            android:layout_toRightOf="@+id/order_list_date"
            android:layout_toStartOf="@+id/order_list_arrow"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingEnd="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingStart="6dp"
            android:text="푸드테스트1(개발팀테스트)"
            android:textScaleX="0.95"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/order_list_arrow"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_arrow_right"/>

    </com.foodfly.gcm.app.view.FixedRelativeLayout>

</RelativeLayout>