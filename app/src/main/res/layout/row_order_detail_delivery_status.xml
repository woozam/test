<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/window_background_light"
        android:paddingEnd="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/cart_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="배송현황"
            android:textSize="13sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/order_detail_delivery_status_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/order_detail_delivery_status_icon_1"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginEnd="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/profile_selector"/>

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/order_detail_delivery_status_icon_2"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginEnd="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/profile_selector"/>

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/order_detail_delivery_status_icon_3"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginEnd="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/profile_selector"/>

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/order_detail_delivery_status_icon_4"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginEnd="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/profile_selector"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_detail_delivery_status_rider_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_detail_delivery_status_icon_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_detail_delivery_status_rider_name_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/order_detail_delivery_status_rider_name_2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/order_detail_delivery_status_rider_name_3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/order_detail_delivery_status_rider_name_4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="10sp"/>

        </LinearLayout>

        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_below="@+id/order_detail_delivery_status_rider_name_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="@color/md_divider_black"/>

        <LinearLayout
            android:id="@+id/order_detail_delivery_status_dot_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_detail_delivery_status_rider_name_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/order_detail_delivery_status_dot_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/pointer_selector"/>

            <ImageView
                android:id="@+id/order_detail_delivery_status_dot_2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/pointer_selector"/>

            <ImageView
                android:id="@+id/order_detail_delivery_status_dot_3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/pointer_selector"/>

            <ImageView
                android:id="@+id/order_detail_delivery_status_dot_4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/pointer_selector"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_detail_delivery_status_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_detail_delivery_status_dot_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_detail_delivery_status_text_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="접수완료"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/order_detail_delivery_status_text_2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="음식점도착"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/order_detail_delivery_status_text_3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="음식점출발"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/order_detail_delivery_status_text_4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="배달완료"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_detail_delivery_status_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_detail_delivery_status_text_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_detail_delivery_status_time_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/order_detail_delivery_status_time_2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/order_detail_delivery_status_time_3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/order_detail_delivery_status_time_4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"/>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/order_detail_delivery_status_refresh"
        style="@style/Button.Small.01"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="배송현황 새로고침"/>
</LinearLayout>