<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/restaurant_menu_root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toLeftOf="@+id/restaurant_menu_image"
        android:layout_toStartOf="@+id/restaurant_menu_image">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/restaurant_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="석쇠불고기도시락"
            android:textScaleX="0.96"
            android:textSize="13sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/restaurant_menu_price_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp">

        <TextView
            android:id="@+id/restaurant_menu_original_price"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:gravity="end|right"
            android:text="9,000원"
            android:textScaleX="0.96"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/restaurant_menu_price"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restaurant_menu_original_price"
            android:gravity="end|right"
            android:text="9,000원"
            android:textScaleX="0.96"
            android:textSize="13sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <com.foodfly.gcm.app.view.CircularImageView
        android:id="@+id/restaurant_menu_image"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toLeftOf="@+id/restaurant_menu_price_layout"
        android:layout_toStartOf="@+id/restaurant_menu_price_layout"
        android:background="@drawable/empty_c"/>

</RelativeLayout>