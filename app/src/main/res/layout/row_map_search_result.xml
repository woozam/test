<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="10dp">

    <ImageView
        android:id="@+id/map_search_result_icon"
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_marker_small_selector"/>

    <LinearLayout
        android:id="@+id/map_search_result_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/map_search_result_icon"
        android:layout_toRightOf="@+id/map_search_result_icon"
        android:gravity="center_vertical"
        android:minHeight="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/map_search_result_formatted_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/map_search_result_street_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/map_search_result_content_layout"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@color/md_divider_black"/>

</RelativeLayout>