<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorTertiary">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:progressBarStyle">@style/CustomProgress</item>
        <item name="progressBarStyle">@style/CustomProgress</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:dialogTheme">@style/Dialog</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:actionBarSize">48dp</item>
        <item name="actionBarSize">48dp</item>
    </style>

    <style name="AppBarTitleTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppBarTitleTextAppearanceExpanded" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button.01">
        <item name="android:background">@drawable/bg_button_1_selector</item>
        <item name="android:textColor">@color/text_button_1</item>
    </style>

    <style name="Button.02">
        <item name="android:background">@drawable/bg_button_2_selector</item>
        <item name="android:textColor">@color/text_button_2</item>
    </style>

    <style name="Button.05">
        <item name="android:background">@drawable/bg_button_5_selector</item>
        <item name="android:textColor">@color/text_button_5</item>
    </style>

    <style name="Button.06">
        <item name="android:background">@drawable/bg_button_6_selector</item>
        <item name="android:textColor">@color/text_button_6_selector</item>
    </style>

    <style name="Button.08">
        <item name="android:background">@drawable/bg_button_8_selector</item>
        <item name="android:textColor">@color/text_button_8</item>
    </style>

    <style name="Button.Small.01">
        <item name="android:background">@drawable/bg_button_1_selector</item>
        <item name="android:textColor">@color/text_button_1</item>
    </style>

    <style name="Button.Small.02">
        <item name="android:background">@drawable/bg_button_2_selector</item>
        <item name="android:textColor">@color/text_button_2</item>
    </style>

    <style name="Button.Small.05">
        <item name="android:background">@drawable/bg_button_5_selector</item>
        <item name="android:textColor">@color/text_button_5</item>
    </style>

    <style name="Button.Small.06">
        <item name="android:background">@drawable/bg_button_6_selector</item>
        <item name="android:textColor">@color/text_button_6_selector</item>
    </style>

    <style name="Button.Small.08">
        <item name="android:background">@drawable/bg_button_8_selector</item>
        <item name="android:textColor">@color/text_button_8</item>
    </style>

    <style name="CustomProgress" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/custom_progress</item>
    </style>

    <style name="Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
    </style>

    <style name="ProgressDialog" parent="Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:progressBarStyle">@style/CustomProgress</item>
        <item name="progressBarStyle">@style/CustomProgress</item>
    </style>

</resources>